@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <form method="post">
        <label asp-for="FizzBuzz.Number"></label>
        <input asp-for="FizzBuzz.Number" /><br />
        <button type="submit">Zatwierdź</button><br />
        <b><span asp-validation-for="FizzBuzz.Number" class="text-danger"></span></b>
    </form>
    <p>@Model.Message</p>
</div>
